                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Group Chat Name"
                                    },
                                    "member_ids": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer",
                                            "example": 3
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Group conversation created successfully",
