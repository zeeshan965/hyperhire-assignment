                                        },
                                        "attachment": {
                                            "type": "string",
                                            "example": "attachments/file.jpg"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-11-01T12:34:56Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
